# Production Settings
DEBUG=False
SECRET_KEY=your-railway-secret-key-from-dashboard-must-be-changed

# Database (Railway provides PostgreSQL)
DATABASE_URL=postgresql://username:password@railway-host:port/railway-db

# Redis (Railway Redis addon)
REDIS_URL=redis://redis-host:port/0

# Allowed Hosts
ALLOWED_HOSTS=.railway.app,your-app-name.railway.app

# CSRF Trusted Origins
CSRF_TRUSTED_ORIGINS=https://*.railway.app

# BridgeDash Business Settings
BRIDGEDASH_COMMISSION_RATE=0.15
BRIDGEDASH_BASE_FARE=5.00
BRIDGEDASH_PER_KM_RATE=2.00

# Email Configuration (for production)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Static Files
STATIC_URL=/static/
STATIC_ROOT=staticfiles

# Security Settings
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# Logging
LOG_LEVEL=INFO